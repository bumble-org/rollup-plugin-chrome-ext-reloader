{
  "manifest_version": 2,
  "name": "Rollup Plugin Chrome Ext Reloader",
  "version": "0.1.0",
  "description": "Reloads your chrome extension.",
  "author": "Jack and Amy Steam <jacksteamdev@gmail.com>",
  "browser_action": {
    "default_icon": {
      "16": "images/clip64-icon-16.png"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "icons": {
    "16": "images/clip64-icon-16.png",
    "48": "images/clip64-icon-48.png",
    "128": "images/clip64-icon-128.png"
  },
  "permissions": [
    "contextMenus",
    "notifications"
  ]
}
